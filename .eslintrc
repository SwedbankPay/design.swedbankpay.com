{
    "parserOptions": {
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "modules": true
        }
    },
    "env": {
        "browser": true,
        "node": true,
        "es6": true,
        "mocha": true,
        "jest/globals": true
    },
    "globals": { },
    "plugins": [
        "react",
        "node",
        "jest"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:jest/recommended"
    ],
    "rules": {
        "no-console": ["warn", {"allow": ["warn", "error"]}],
        "no-extra-semi": 1,
        "no-inner-declarations": 0,
        "no-invalid-regexp": 1,
        "no-irregular-whitespace": 1,
        "no-unreachable": 1,
        "block-scoped-var": 1,
        "eqeqeq": 1,
        "no-alert": 1,
        "no-multi-spaces": 1,
        "no-redeclare": 1,
        "no-undef": 2,
        "no-unused-vars": 1,
        "node/exports-style": ["error", "module.exports"],
        "array-bracket-spacing": 1,
        "camelcase": 1,
        "comma-spacing": 1,
        "comma-style": 1,
        "comma-dangle": ["error", "never"],
        "computed-property-spacing": 1,
        "eol-last": 1,
        "func-call-spacing": 1,
        "indent": [1, 4, { "SwitchCase": 1 }],
        "jsx-quotes": [1, "prefer-double"],
        "key-spacing": 1,
        "keyword-spacing": 1,
        "linebreak-style": [1, "windows"],
        "new-cap": 1,
        "newline-per-chained-call": 1,
        "no-mixed-spaces-and-tabs": 2,
        "no-multiple-empty-lines": 2,
        "no-trailing-spaces": 2,
        "no-unneeded-ternary": 1,
        "no-whitespace-before-property": 1,
        "object-curly-newline": 1,
        "object-curly-spacing": [1, "always"],
        "object-property-newline": 1,
        "quotes": [1, "double"],
        "semi": 2,
        "semi-spacing": 1,
        "semi-style": 1,
        "space-before-function-paren": 1,
        "space-in-parens": 1,
        "space-infix-ops": 1,
        "spaced-comment": 1,
        "wrap-regex": 2,
        "constructor-super": 2,
        "no-const-assign": 2,
        "no-this-before-super": 1,
        "no-var": 1,
        "prefer-const": 1,
        "prefer-spread": 1,
        "react/prop-types": 0
    }
}
